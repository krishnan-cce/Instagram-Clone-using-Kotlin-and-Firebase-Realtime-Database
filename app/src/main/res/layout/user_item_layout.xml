<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="120dp"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="100dp"
    android:background="@drawable/button_black_background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="380dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_image_search"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="3dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:src="@drawable/profile" />


            <TextView
                android:id="@+id/user_name_search"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_below="@+id/user_profile_image_search"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-100dp"
                android:layout_marginEnd="34dp"
                android:text="user name"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_full_name_search"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_below="@+id/user_name_search"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="34dp"
                android:text="user profile name"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/follow_btn_search"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/user_full_name_search"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="144dp"
                android:layout_marginBottom="-39dp"
                android:background="@drawable/button_black_background"
                android:text="Follow"
                android:textAllCaps="false" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>